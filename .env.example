# Home Assistant AI - Пример конфигурации окружения

# Основные настройки
DEBUG=false
LOG_LEVEL=INFO

# Директории данных
DATA_DIR=./data
CONFIG_DIR=./config

# База данных
DATABASE__URL=sqlite:///./data/home_assistant.db
DATABASE__ECHO=false

# AI конфигурация  
AI__OPENAI_API_KEY=
AI__OPENAI_MODEL=gpt-4
AI__LOCAL_LLM_ENABLED=true
AI__LOCAL_LLM_MODEL=llama2:7b
AI__LOCAL_LLM_URL=http://localhost:11434

# Протоколы связи
PROTOCOLS__ENABLED=["wifi", "bluetooth", "mqtt"]

# MQTT настройки
PROTOCOLS__MQTT_BROKER=localhost
PROTOCOLS__MQTT_PORT=1883
PROTOCOLS__MQTT_USERNAME=
PROTOCOLS__MQTT_PASSWORD=
PROTOCOLS__MQTT_TOPIC_PREFIX=homeassistant

# Zigbee настройки (опционально)
PROTOCOLS__ZIGBEE_DEVICE=/dev/ttyUSB0
PROTOCOLS__ZIGBEE_BAUDRATE=115200

# Z-Wave настройки (опционально)
PROTOCOLS__ZWAVE_DEVICE=/dev/ttyACM0

# Голосовое управление
VOICE__ENABLED=true
VOICE__STT_ENGINE=google
VOICE__STT_LANGUAGE=ru-RU
VOICE__TTS_ENGINE=pyttsx3
VOICE__TTS_LANGUAGE=ru
VOICE__WAKE_WORD=Hey Assistant

# API сервер
API__HOST=0.0.0.0
API__PORT=8000
API__SECRET_KEY=
API__ACCESS_TOKEN_EXPIRE_MINUTES=30

# Режим приватности
PRIVACY__ENABLED=false
PRIVACY__FORCE_LOCAL_PROCESSING=false
PRIVACY__DISABLE_CLOUD_SERVICES=false
PRIVACY__ENCRYPT_LOCAL_DATA=true